<!-- Views/Shared/_HomeNavBar.cshtml -->
<!-- Top Info Bar -->
<div class="text-white py-1" style="background: linear-gradient(to right, #0d1f57, #0b355e)">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <div>
            Help Line No : <strong>+91 7085741695</strong>
        </div>
        <div class="d-flex align-items-center gap-3">
            <select class="form-select form-select-sm w-auto">
                <option selected>Select Language</option>
            </select>
            <div class="text-warning fw-bold">
                *MIIPP 2024 Registrations open till 31st March 2026
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.FullName as string))
            {
                <div class="text-white">
                    👤 <strong>@ViewBag.FullName</strong>
                </div>
                <a asp-controller="Logout" asp-action="Index" class="btn btn-danger btn-sm">LOGOUT</a>
            }
            else
            {
                <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-sm">LOGIN</a>
            }
        </div>
    </div>
</div>

<!-- Logo and Banner -->
