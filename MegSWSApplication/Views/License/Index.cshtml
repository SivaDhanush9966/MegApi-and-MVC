@model MegSWSApplication.Models.LicenseeFullDetailsModel

@{
    ViewData["Title"] = "License Form";
}

<div class="card shadow border-0">
    <div class="card-body p-4">

        <h2 class="card-header text-white text-center" style="background-color: cornflowerblue; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            License Form
        </h2>

        <form asp-action="SubmitLicenseData" method="post">
            @Html.Partial("~/Views/Shared/Partials/LicenseePersonalDetails.cshtml")
            @Html.Partial("~/Views/Shared/Partials/LicenseePersonalAddress.cshtml")
            @Html.Partial("~/Views/Shared/Partials/LicenseeBusinessAddress.cshtml")

            <div class="text-center">
                <button type="submit" class="btn btn-success mt-4 px-5 py-2 fw-semibold">
                    Submit
                </button>
            </div>
        </form>

        @if (ViewBag.ApiResponse != null)
        {
            <div class="alert alert-info alert-dismissible fade show mt-4" role="alert">
                <strong>Response:</strong> @ViewBag.ApiResponse
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

    </div>
</div>

